//Header Sticky
window.addEventListener('scroll', function() {
  var masthead = document.getElementById('masthead');
  
  if (!masthead) {
    // Exit the function if the element with id 'masthead' is not found
    return;
  }

  var scrollTop = window.pageYOffset || document.documentElement.scrollTop;

  if (scrollTop > 100) {
    masthead.classList.add('sticky');
  } else {
    masthead.classList.remove('sticky');
  }
});

function validateEmail(email) {
  const commonProviders = /^.*@(gmail|yahoo|hotmail|outlook|live|aol|icloud|ymail|msn|me)\.com$/i;
  const emailPattern = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
  if (commonProviders.test(email)) {
    return false;
  }
  if (emailPattern.test(email)) {
    return true;
  }  
  return false;
} 

